<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Task Tracker Lite</title>

    <!-- Bootstrap 5.3.8 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Iconos (Bootstrap Icons) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Estilos personalizados -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TSGTaskBoard.UI.styles.css" asp-append-version="true" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Sidebar */
        .sidebar {
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            width: 220px;
            background-color: #343a40;
            padding-top: 1rem;
        }
        .sidebar .nav-link {
            color: #fff;
        }
        .sidebar .nav-link.active {
            background-color: #495057;
            font-weight: bold;
        }

        /* Main content */
        .main-content {
            margin-left: 220px;
            padding: 2rem;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        /* Card hover */
        .card {
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.03);
        }

        /* Kanban */
        .kanban-column {
            min-height: 300px;
            border-radius: 5px;
            background-color: #e9ecef;
            padding: 1rem;
            margin-bottom: 1rem;
        }
        .kanban-card {
            cursor: grab;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <nav class="sidebar d-flex flex-column">
        <a class="navbar-brand text-white px-3 mb-4" asp-area="" asp-controller="Home" asp-action="Index">
            Task Tracker Lite
        </a>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> Dashboard
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Tareas" ? "active" : "")"
                   asp-area="" asp-controller="Tareas" asp-action="Index">
                    <i class="bi bi-card-checklist"></i> Tareas
                </a>
            </li>
        </ul>
    </nav>

    <!-- Main content -->
    <div class="main-content">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top mt-auto py-3 bg-dark">
        <div class="container text-center text-white">
            &copy; 2026 - TSGroup - Task Tracker Lite  
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>